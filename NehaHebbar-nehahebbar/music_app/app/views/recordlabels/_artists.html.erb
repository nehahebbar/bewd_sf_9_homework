
<%=link_to "Add Artist", new_artist_path(recordlabel:@recordlabel), class: 'btn btn-purple btn-sm'%>

<div class="panel-body">

    <table class="table table-hover">

      <!-- This is a table row with headers -->
      <tr class="small">
        <th> Artist Name</th>
        <th> Actions </th>
      </tr>

      <% @artists.each do |artist| %>
        <tr class="small">
          <td> <%= "#{artist.name.titleize}" %></td>
          <td>
            <%= link_to "Edit", edit_artist_path(artist), class: "btn btn-purple btn-xs"%>
            <%= link_to "Delete", artist, method: :delete, data: {confirm: "You sure?"}, class: 'btn btn-xs btn-danger' %>
          </td>
       </tr>
        <% end %>
    </table>
</div>
