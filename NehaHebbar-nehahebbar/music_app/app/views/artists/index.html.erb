
<div class="col-md-12">
  <div class="table-responsive">
    <h1 style="color:#7C76A6;"><b>All Artists</b> </h1>
    <%=link_to "Add New Artist", artists_new_path, class: 'btn btn-purple btn-sm' %>
    <br>
    <br>
    <table class="table table-hover">

      <!-- This is a table row with headers -->
      <tr class="small">
        <th> Artist</th>
        <th> Actions </th>
      </tr>

        <% @artists.each do |artist| %>
        <tr class="small">
          <td> <%= artist.name %></td>
          <td>
            <%=link_to 'View', artist_path(artist), class: "btn btn-purple btn-xs" %>
            <%= link_to "Edit", edit_artist_path(artist), class: "btn btn-purple btn-xs"%>
            <%= link_to "Delete", artist, method: :delete, data: {confirm: "You sure?"}, class: 'btn btn-xs btn-danger' %>
          </td>
       </tr>
        <% end %>
    </table>
  </div>
</div>
